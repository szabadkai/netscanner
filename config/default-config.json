{
  "scan": {
    "defaultRange": "192.168.1.0/24",
    "passive": false,
    "watch": false,
    "timeout": 5000,
    "refreshInterval": 15000,
    "hideUnknownDevices": false
  },
  "ui": {
    "showStats": true,
    "showDeviceCards": true,
    "theme": "netwave"
  },
  "export": {
    "defaultFormat": "json",
    "defaultPath": "devices.json"
  },
  "tools": {
    "nmap": "nmap",
    "tcpdump": "tcpdump",
    "arp": "arp",
    "arpScan": "arp-scan",
    "ping": "ping"
  },
  "nmap": {
    "enableOsScan": true,
    "versionIntensity": 3,
    "topPorts": 50,
    "scripts": [
      "broadcast-dhcp-discover",
      "broadcast-wpad-discover"
    ]
  },
  "passive": {
    "interface": null,
    "captureDuration": 12000,
    "mdns": true
  }
}
